{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "testFixture/**"]
    },
    "lint": {
      "outputs": []
    },
    "package": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": ["*.vsix"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    }
  }
}
